<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="col-lg-10">
        <div class="card position-relative">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Calculo Gastos Mensuales</h6>
            </div>
            <div class="card-body">

                <nav class="navbar navbar-expand navbar-light bg-light mb-4">
                    <select id="inputState" class="form-control col-2">
                        <option selected>Periodo</option>
                        <option>2019-08</option>
                        <option>2019-09</option>
                        <option>2019-10</option>
                        <option>2019-11</option>
                        <option>2019-12</option>
                        <option>2020-01</option>
                    </select>
                    &nbsp;&nbsp;
                    <button id="btn_SaveState" name="btn_SaveState" type="button" class="btn btn-success">Generar Estado Mensual</button>
                </nav>

                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Periodo</th>
                                <th>Fecha</th>
                                <th>Registros</th>
                                <th>Egresos</th>
                                <th>Ingresos</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.EmployeeList)
                            {
                            <tr>
                                <td>@item.Period_Desc</td>
                                <td>@item.Generation_Date</td>
                                <td>@item.Total_Records</td>
                                <td>@item.Total_Expenses</td>
                                <td>@item.Total_Incomes</td>
                                <td>@item.Total_Net</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="modal fade" id="myModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-body">
                                <div style="text-align:center;">
                                    <h4>Generando Estado</h4>
                                    <img src="~/Content/img/Ring-Preloader.gif" width="150" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            </div>
    </div>
</body>
</html>
