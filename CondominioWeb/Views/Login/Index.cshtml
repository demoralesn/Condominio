@model CondominioWeb.Models.Login

@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin 2 - Login</title>
    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    @Styles.Render("~/bundles/css")
</head>
<body class="bg-gradient-primary">
    <div class="container">
        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            <!-- Outer Row -->
            <div class="row justify-content-center">
                <div class="col-xl-10 col-lg-12 col-md-9">
                    <div class="card o-hidden border-0 shadow-lg my-5">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->
                            <div class="row">
                                <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Bienvenido!</h1>
                                        </div>
                                        <div class="form-group">
                                            <p class="text-danger">@ViewBag.Message</p>
                                            </div>
                                        <div class="form-group">
                                            <p>@Html.TextBoxFor(m => m.user, new { @class = "form-control form-control-user", placeholder = "Ingrese usuario...", required = "required" })</p>
                                            <p>@Html.ValidationMessageFor(m => m.user, "", new { @class = "text-danger" })</p>
                                        </div>
                                        <div class="form-group">
                                            <p>@Html.PasswordFor(m => m.pass, new { @class = "form-control form-control-user", placeholder = "Ingrese contraseña...", required = "required" })</p>
                                            <p>@Html.ValidationMessageFor(m => m.pass, "", new { @class = "text-danger" })</p>
                                        </div>
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox small">
                                                    <input type="checkbox" class="custom-control-input" id="customCheck">
                                                    <label class="custom-control-label" for="customCheck">Recordarme</label>
                                                </div>
                                            </div>
                                            <p><input type="submit" class="btn btn-primary btn-user btn-block" value="Ingresar" /></p>
                                            <hr>
                                            <hr>
                                            <div class="text-center">
                                                <a class="small" href="forgot-password.html">Olvido su contrase&ntilde;a?</a>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- Bootstrap core JavaScript-->
    <!-- Core plugin JavaScript-->
    <!-- Custom scripts for all pages-->
    @Scripts.Render("~/bundles/js")
</body>
</html>
