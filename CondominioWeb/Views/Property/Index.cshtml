
<div class="container-fluid">
    <!-- Page Heading -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Listado Propiedades</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">

                @if (ViewBag.Tipo == 1)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.Message
                    </div>
                }
                @if (ViewBag.Tipo == 0)
                {
                    <div class="alert alert-success" role="alert">
                        @ViewBag.Message
                    </div>
                }

                <p>
                    @Html.ActionLink("Crear Nuevo", "Crear", "Copropietario")
                </p>
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Propiedad</th>
                            <th>Tipo</th>
                            <th>Estado</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    @*<tfoot>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                                <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                                <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                                <th>@Html.DisplayNameFor(model => model.Fec_Nac)</th>
                                <th>@Html.DisplayNameFor(model => model.Nacionalidad)</th>
                                <th>@Html.DisplayNameFor(model => model.Email)</th>
                                <th>&nbsp;</th>
                            </tr>
                        </tfoot>*@
                    <tbody>
                        @foreach (var item in ViewBag.EmployeeList)
                        {
                            <tr id="row_@item.Property_Id">
                                <td>@item.Property_Desc</td>
                                <td>@item.Property_Type</td>
                                <td>@item.Property_State_Desc</td>
                                <td>


                                    <a href="/property/editar/@item.Property_Id" class="btn btn-info btn-circle btn-sm" data-toggle="tooltip" data-placement="top" title="Actualizar">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a href="#" class="btn btn-danger btn-circle btn-sm" data-toggle="tooltip" data-placement="top" title="Eliminar" onclick="ConfirmDelete(@item.Property_Id)">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


                <div class="modal fade" id="myModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-body">
                                <h4>Esta seguro que desea eliminar este registro? </h4>

                                <div style="text-align:center;display:none" id="loaderDiv">
                                    <img src="~/Content/img/Ring-Preloader.gif" width="150" />
                                </div>

                            </div>
                            <div class="modal-footer">
                                <a href="#" class="btn btn-default" data-dismiss="modal">Cancelar</a>
                                <a href="#" class="btn btn-success" onclick="DeleteEmployee()">Confirmar</a>
                            </div>

                        </div>

                    </div>

                </div>


                @*hidden field for storing current employeeId*@
                <input type="hidden" id="hiddenEmployeeId" />



            </div>
        </div>
    </div>
</div>