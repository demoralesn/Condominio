@model IEnumerable<CondominioWeb.Models.Propiedad>

<div class="container-fluid">
    <!-- Page Heading -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Listado Copropietarios</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <p>
                    @Html.ActionLink("Crear Nuevo", "Crear", "Propiedad")
                </p>
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Numero)</th>
                            <th>@Html.DisplayNameFor(model => model.Propietario)</th>
                            <th>@Html.DisplayNameFor(model => model.Prorrateo)</th>
                            <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                            <th>@Html.DisplayNameFor(model => model.Estado)</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    @*<tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                            <th>@Html.DisplayNameFor(model => model.Fec_Nac)</th>
                            <th>@Html.DisplayNameFor(model => model.Nacionalidad)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>&nbsp;</th>
                        </tr>
                    </tfoot>*@
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Numero)</td>
                                <td>@Html.DisplayFor(modelItem => item.Propietario)</td>
                                <td>@Html.DisplayFor(modelItem => item.Prorrateo)</td>
                                <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                                <td>
                                    <a href="#" class="btn btn-info btn-circle btn-sm">
                                        <i class="fas fa-info-circle"></i>
                                    </a> |
                                    <a href="#" class="btn btn-danger btn-circle btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>