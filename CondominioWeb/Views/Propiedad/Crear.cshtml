@using CondominioWeb.Models
@model Propiedad

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <!-- <div class="col-lg-5 d-none d-lg-block bg-register-image"></div> -->
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Registro Propiedades</h1>
                        </div>

                        @if (ViewBag.Tipo == 1)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.Message
                            </div>
                        }
                        @if (ViewBag.Tipo == 0)
                        {
                            <div class="alert alert-success" role="alert">
                                @ViewBag.Message
                            </div>
                        }

                        @using (Html.BeginForm("Crear", "Propiedad", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label for="Rut">N&uacute;mero</label>
                                @Html.TextBox("Numero", null, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label for="Genero">Tipo</label>
                                @Html.DropDownList("_Tipo",
                new SelectList(Enum.GetValues(typeof(Tipo))),
                "Seleccionar...",
                new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label for="Email">Prorrateo</label>
                                @Html.TextBox("Prorrateo", null, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label for="Email">Propietario</label>
                                @Html.TextBox("Propietario", null, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label for="Genero">Estado</label>
                                @Html.DropDownList("_Estado_Prop",
                new SelectList(Enum.GetValues(typeof(EstadoPro))),
                "Seleccionar...",
                new { @class = "form-control" })
                            </div>

                            <p>
                                <button type="submit" class="btn btn-success">Registrar</button>
                                &nbsp;
                                <a href="/propiedad/" class="btn btn-warning">Volver</a>
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
