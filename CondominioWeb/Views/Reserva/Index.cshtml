<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="col-lg-6">
        <div class="card position-relative">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Reserva Sala Multiuso</h6>
            </div>
            @using (Html.BeginForm("Detalle", "Cobranza", FormMethod.Post))
            {
        <div class="card-body">

            <nav class="navbar navbar-expand navbar-light bg-light mb-4">
                <a class="navbar-brand" href="#">Propiedad:</a>
                <ul class="navbar-nav ml-auto">
                    <div class="form-group">
                        @Html.DropDownList("Propiedad",
 new SelectList(ViewBag.Prop, "Value", "Text"),
"Seleccionar...",
new { @class = "form-control" })
                    </div>
                </ul>
            </nav>

            <nav class="navbar navbar-expand navbar-light bg-light mb-4">
                <a class="navbar-brand" href="#">Fecha Reserva:</a>
                <ul class="navbar-nav ml-auto">
                    <div class="form-group">
                        @Html.TextBox("Fec_Nac", null, new { @class = "form-control" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </ul>
            </nav>


            <p>&nbsp;</p>

            <p>
            <p>
                <a href="/Exportar/Index/2" class="btn btn-success">Crear Reserva</a>
                &nbsp;
                <a href="/Home/" class="btn btn-warning">Volver</a>
            </p>
            </p>
        </div>
            }
        </div>
    </div>
</body>
</html>
