@using CondominioWeb.Models
@model Copropietario

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <!-- <div class="col-lg-5 d-none d-lg-block bg-register-image"></div> -->
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Registro Copropietarios</h1>
                        </div>

                        @if (ViewBag.Tipo == 1)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.Message
                            </div>
                        }
                        @if (ViewBag.Tipo == 0)
                        {
                            <div class="alert alert-success" role="alert">
                                @ViewBag.Message
                            </div>
                        }

                        @using (Html.BeginForm("Crear", "Copropietario", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label for="Nombre">Nombre</label>
                                @Html.TextBox("Nombre", null, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label for="Apellido">Apellido</label>
                                @Html.TextBox("Apellido", null, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label for="Telefono">Tel&eacute;fono</label>
                                @Html.TextBox("Telefono", null, new { @class = "form-control" })
                                <small id="emailHelp" class="form-text text-muted">Debe contener 9 caracteres</small>
                            </div>

                            <div class="form-group">
                                <label for="Genero">Genero</label>
                                @Html.DropDownList("_Genero",
                new SelectList(Enum.GetValues(typeof(Genero))),
                "Seleccionar...",
                new { @class = "form-control" })
                            </div>

                            <div class="row">
                                <div class='col-sm-6'>
                                    <div class="form-group">
                                        <label for="Fec_Nac">Fecha Nacimiento</label>
                                        <div class='input-group date' id='datetimepicker2'>
                                            @Html.TextBox("Fec_Nac", null, new { @class = "form-control" })
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="Nacionalidad">Nacionalidad</label>
                                @Html.DropDownList("_Nacionalidad",
                new SelectList(Enum.GetValues(typeof(Nacionalidad))),
                "Seleccionar...",
                new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label for="Email">Email</label>
                                @Html.TextBox("Email", null, new { @class = "form-control", placeholder = "nombre@ejemplo.com" })
                            </div>

                            <p>
                                <button type="submit" class="btn btn-success">Registrar</button>
                                &nbsp;
                                <a href="/copropietario/" class="btn btn-warning">Volver</a>
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
